<p id="notice"><%= notice %></p>

<h1>Api Rests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_rests.each do |api_rest| %>
      <tr>
        <td><%= api_rest.title %></td>
        <td><%= api_rest.body %></td>
        <td><%= api_rest.count %></td>
        <td><%= link_to 'Show', api_rest %></td>
        <td><%= link_to 'Edit', edit_api_rest_path(api_rest) %></td>
        <td><%= link_to 'Destroy', api_rest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Api Rest', new_api_rest_path %>
